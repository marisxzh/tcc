                margin-top: 10px;
            }

            .adicionar-usuario {
                width: 100%;
            }

            .barra-pesquisa input {
                width: calc(100% - 50px);
                font-size: 14px;
            }

            .lista-usuario {
                flex-direction: column;
                align-items: flex-start;
            }
        }

        @media (max-width: 480px) {
            .titulo h1 {
                font-size: 28px;
            }

            .adicionar-usuario {
                font-size: 16px;
                padding: 5px 15px;
            }

            .barra-pesquisa input {
                font-size: 14px;
                
            }
        }
    </style>
</head>

<header>
    <%- include('./navbar.ejs', { activePage: 'entregaFeitaAdm' }) %>
</header>

<body>
    <div class="container">
        <div class="titulo">
            <h1>Histórico de Entregas</h1>
        </div>

        <form action="/pesquisarEntregaFeitaAdm" method="GET">
            <div class="search-bar">
                <input type="text" id="search-input" name="pesquisa" placeholder="Pesquisar">
                <button type="submit" class="search-icon-box">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>

        <div class="list-group">
            <% entrega.forEach((entrega)=> { %>
                <div class="lista-camiseta">
                    <span class="titulo-camiseta" style="white-space: nowrap;">
                        <%= entrega.nome %>
                    </span>
                    <small style="text-align: center; color: #003366; width: 100%; display: block;">
                        <%= entrega.modelo_camiseta %>
                    </small>

                    <form action="/infoEntregaFeitaAdm" method="GET">
                        <input type="hidden" name="cod_entrega" value="<%= entrega.cod_entrega %>">
                        <button class="botao-ver" type="submit">Detalhes</button>
                    </form>
                </div>
                <% }); %>
                    <% if (entrega.length===0) { %>
                        <div class="sem-resultados">
                            <p>Nenhuma entrega encontrada.</p>
                        </div>
                        <% } %>
        </div>
    </div>
</body>

<footer>
    <%- include('./footer.ejs', { activePage: 'entregaFeitaAdm' }) %>
</footer>

</html>