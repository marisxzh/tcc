<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Entregas Pendentes
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <link rel="icon" href="./img/favicon-32x32.png" type="image/x-icon">
    <style>
        body {
            margin: 0;
            font-family: 'Roboto', sans-serif;
            background-color: #193361;
            color: white;
            overflow-x: hidden;
        }

        .container {
            min-height: calc(100vh - 60px);
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .titulo {
          
          margin: 20px auto;
          font-weight: bold;
          font-size: 36px;
          padding: 20px;
          border-bottom: 3px solid white;
          text-align: center;
          color: #fff;
          max-width: 100%;
      
      
              }
      
              .titulo h1 {
                  margin: 0;
                  font-weight: bold;
                  font-size: 36px;
              }

        .botao-indicacao-pesquisa {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            gap: 10px;
        }

        .adicionar-camiseta {
            height: 50px;
            font-size: 20px;
            padding: 2px 20px;
            background: none;
            color: #fff;
            border-radius: 10px;
            border: 2px solid #ffffff;
            transition: 0.6s;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        .adicionar-camiseta:hover {
            background-color: #2d3f52;
            color: #fff;
            border: 2px solid white;
        }

        .barra-pesquisa {
            display: flex;
            align-items: center;
        }

        .barra-pesquisa input {
            padding: 10px;
            border-radius: 5px 0 0 5px;
            border: none;
            width: 200px;
            height: 50px;
            font-size: 20px;
        }

        .caixa-icone-pesquisa {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            background-color: rgb(151, 151, 151);
            border-radius: 0 5px 5px 0;
            cursor: pointer;
            transition: background-color 0.3s ease;
            border: none;
        }
        .caixa-icone-pesquisa i {
        color: #ffffff;
    }

        .caixa-icone-pesquisa:hover {
            background-color: rgb(94, 94, 94);
        }

        .lista-camiseta {
            margin-bottom: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #ffffff;
            color: #003366;
            padding: 15px;
            border-radius: 5px;
        }

        .titulo-camiseta {
            font-weight: bold;
            font-size: 18px;
            flex: 1;
        }

        .botao-ver {
            background-color: #003366;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .botao-ver:hover {
            background-color: #002244;
        }

        .sem-resultados {
            text-align: center;
            color: #ffffff;
        }
    </style>
</head>

<body>
    <header>
        <%- include('./navbar.ejs', { activePage: 'entregaPendenteAdm' }) %>
    </header>
    <div class="container">
        <div class="titulo">
            <h1>Entregas Pendentes
            </h1>
        </div>
  
          <form method="get" action="/pesquisarEntregaPendenteAdm">
            <input
              class="form-control mr-sm-2"
              name="pesquisa"
              type="search"
              placeholder="Pesquisar"
              aria-label="Search"
            />
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
              <i class="fa fa-search fa-fw"></i>
            </button>
          </form>
        </nav>
        <hr style="background-color: #fff;">
        <div class="list-group">
            <% entrega.forEach((entrega) => { %>
                <div class="lista-camiseta">
                    <span class="titulo-camiseta"><%= entrega.nome %></span>
                    <form action="/infoEntregaPendenteAdm" method="GET">
                        <input type="hidden" name="cod_entrega" value="<%= entrega.cod_entrega %>">
                        <button class="botao-ver" type="submit">Detalhes</button>
                    </form>
                </div>
            <% }); %>
            <% if (entrega.length === 0) { %>
                <div class="sem-resultados">
                    <p>Nenhuma entrega encontrada.</p>
                </div>
            <% } %>
        </div>
      </div>
    </div>
  
  </body>

</html>
