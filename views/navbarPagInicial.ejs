<div class="navbar">
    <a href="/pagInicial"> <img src="../img/aapm_logo_cortada.png"  alt="logo" class="logo"></a>
    <div class="nav-links">
       
        </a>
        <div class="profile-icon" id="profile-icon">
            <i class="fas fa-user"></i>
            <div class="dropdown-menu" id="dropdown-menu">
                <div class="profile-icon-dropdown" id="profile-icon-dropdown">
                    <i class="fas fa-user"></i>
                </div>
                <h1><%= nome %></h1> <!-- Nome do usuário -->
                <a href="/perfilAluno">Perfil</a>
                <a href="/sair">Sair</a>
            </div>
        </div>
    </div>
</div>

<!-- Script para o dropdown funcionar -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const profileIcon = document.getElementById('profile-icon');
        const dropdownMenu = document.getElementById('dropdown-menu');

        profileIcon.addEventListener('click', function (event) {
            event.stopPropagation(); // Impede que o clique no dropdown feche o menu imediatamente
            dropdownMenu.style.display = dropdownMenu.style.display === 'block' ? 'none' : 'block';
        });

        document.addEventListener('click', function (event) {
            if (!profileIcon.contains(event.target)) {
                dropdownMenu.style.display = 'none';
            }
        });
    });
</script>

<style>
.navbar {  /* Barra de Navegação */
    display: flex;
    justify-content: space-between; 
    align-items: center; 
    background-color: #fff;
    padding: 20px 20px;
    flex-wrap: nowrap; /* Impede quebra de linha */
}

   .navbar img.logo {
        /* Logo da barra de navegação */
        height: 50px;
        margin-left: 40px;
    }

.navbar .nav-links {   /* div nav-links */
    display: flex;
    align-items: center;
    gap: 20px;
    margin-left: auto; /* Empurra os links para a direita */
}

.navbar .nav-links a  { /* Estilos dos textos na navbar */
    text-decoration: none;
    color: #333;
    font-size: 15px;
    font-weight: bold;
    padding: 8px 12px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
}

.navbar .nav-links a:hover { /* Estilos dos textos da navbar ao passar o mouse */
    background-color: #cfcfcf;
}

.navbar .nav-links .profile-icon { /* Estilo do ícone de perfil da navbar */
    font-size: 25px;
    color: #333;
    position: relative;
    cursor: pointer;
    margin-left: auto; /* Mantém o ícone alinhado à direita */
}

.dropdown-menu {  /* Estilo da Dropdown */
    display: none;
    position: absolute;
    top: 100%;
    right: 0px;
    background-color: #0E1420;
    border-radius: 4px;
    min-width: 200px; /* Largura mínima ajustada */
    padding: 10px 0;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
}

.dropdown-menu a { /* Estilos dos links do dropdown */
    display: block;
    text-align: center;
    padding: 10px;
    text-decoration: none;
    font-weight: normal;
}

.dropdown-menu .profile-icon-dropdown { /* Estilos do ícone de perfil da Dropdown */
    font-size: 40px;
    padding-top: 15px;
    text-align: center;
    color: #fff;
}

.navbar .nav-links .profile-icon h1 { /* Estilo do nome do usuário no dropdown */
    font-size: 20px; /* Tamanho ajustado */
    color: white;
    text-align: center;
    margin-top: 10px;
}

.navbar .nav-links .profile-icon .dropdown-menu a {  /* Cor do texto da dropdown */
    color: #fff;
}

/* Responsividade para telas menores */
@media (max-width: 768px) {
    .navbar {
        padding: 10px;
        justify-content: space-between; /* Mantém alinhamento entre logo e ícone */
    }

    .navbar .nav-links {
        gap: 10px;
        margin-left: 0; /* Remove margem adicional no mobile */
    }
    
    .dropdown-menu {
        right: 0;
    }
}

</style>